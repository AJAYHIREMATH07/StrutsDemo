<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
    "dtd/struts-config_1_3.dtd">

<struts-config>

    
<form-beans>
    <form-bean name="helloForm" type="com.example.forms.HelloForm"/>
    <form-bean name="employeeForm" type="com.example.forms.EmployeeForm"/>
</form-beans>


    <action-mappings>
<action
    path="/hello"
    name="helloForm"
    type="com.example.actions.HelloAction"
    scope="request"
    validate="false">

    <forward name="success" path="/hello.jsp"/>
</action>
<action
    path="/employees"
    type="com.example.actions.EmployeeAction"
    name="employeeForm"
    scope="request"
    validate="false">

    <forward name="list" path="/employee-list.jsp"/>
</action>
    </action-mappings>

</struts-config>
