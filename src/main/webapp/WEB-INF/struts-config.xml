<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
    "dtd/struts-config_1_3.dtd">

<struts-config>

    
<form-beans>
    <form-bean name="helloForm" type="com.example.forms.HelloForm"/>
    <form-bean name="employeeForm" type="com.example.forms.EmployeeForm"/>
    <form-bean name="customerForm" type="com.example.forms.CustomerForm"/>    
</form-beans>


    <action-mappings>
<action
    path="/hello"
    name="helloForm"
    type="com.example.actions.HelloAction"
    scope="request"
    validate="false">

    <forward name="success" path="/hello.jsp"/>
</action>
    <action path="/listEmployees"
            type="com.example.actions.ListEmployeeAction"
            scope="request"
            validate="false">
      <forward name="success" path="/employee-list.jsp"/>
    </action>

    <action
        path="/customer"
        type="com.example.actions.CustomerAction"
        name="customerForm"
        scope="request"
        validate="false"
        input="/customer.jsp">

        <forward name="success" path="/customer.jsp"/>
    </action>

    
    </action-mappings>
    <message-resources parameter="ApplicationResources"/>
    

</struts-config>
